{
  "manifest_version": 3,
  "name": "LinkedIn AI Apply Extension",
  "version": "1.0.3",
  "description": "Generate job application emails & cover letters using AI",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "storage",
    "tabs",
    "sidePanel"
  ],

  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://mail.google.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content/content.js"]
    }
  ],

  "side_panel": {
    "default_path": "panel/panel.html"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "lib/pdf.worker.mjs",
        "lib/jspdf.umd.min.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
