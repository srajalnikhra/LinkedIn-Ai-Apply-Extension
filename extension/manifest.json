{
  "manifest_version": 3,
  "name": "LinkedIn AI Apply Extension",
  "version": "0.3.0",
  "description": "Apply via email using AI-generated email body.",
  "permissions": ["tabs", "sidePanel", "storage"],
  "host_permissions": ["https://www.linkedin.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content/content.js"]
    }
  ],
  "side_panel": {
    "default_path": "panel/panel.html"
  }
}
