{
  "manifest_version": 3,
  "name": "LinkedIn AI Apply Extension",
  "version": "0.1.0",
  "description": "Apply via email using AI-generated email body and cover letter.",

  "action": {
    "default_title": "LinkedIn AI Apply"
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "sidePanel",
    "storage"
  ],

  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content/content.js"]
    }
  ],

  "side_panel": {
    "default_path": "panel/panel.html"
  }
}
